## Bashrc/bash_aliases stuff
alias bashrcs=". ~/.bashrc"
alias editalias='$EDITOR ~/.bash_aliases'
alias editaliases='$EDITOR ~/.bash_aliases'

# SSH
alias editsshconf="nvim ~/.ssh/config && dos2unix ~/.ssh/config"
alias editsshconfig="nvim ~/.ssh/config && dos2unix ~/.ssh/config"

## Ansible
alias ap="ansible-playbook"

## System conveniences
alias getchmod="stat --format '%a' "
alias mkdir='mkdir -pv'
alias grep='grep --color'
# Search command history by term (i.e. gh bash)
alias gh='history|grep'

# Use rsync instead of cp if installed
if [ -x /usr/bin/rsync ]; then
  alias cp='rsync --progress -ah '
fi


